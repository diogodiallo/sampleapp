<h1>Inscription</h1>

<div class="formulaire">
  <%= form_for(@user) do |form| %>
    <%= render('shared/error_messages') %>
    <div class="field">
      <%= form.label :nom %><br>
      <%= form.text_field :nom %>
    </div>
    <div class="field">
      <%= form.label :email %><br>
      <%= form.text_field :email %>
    </div>
    <div class="field">
     <%= form.label :password %><br>
     <%= form.password_field :password %>
    </div>
    <div class="field">
      <%= form.label :password_confirmation, "Confirmation" %><br>
      <%= form.password_field :password_confirmation %>
    </div>
    <div class="actions">
      <%= form.submit "Inscription", :class => "btn-round" %>
    </div>
  <% end %>
</div>
